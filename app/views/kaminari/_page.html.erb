<% if page.current? %>
  <li class="page-item active">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0' %>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark' %>
  </li>
<% end %>
