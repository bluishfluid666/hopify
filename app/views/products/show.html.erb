    <!-- Open Content -->
    <section class="bg-light">
        <div class="container pb-5">
            <div class="row">
                <div class="col-lg-5 mt-5">
                    <div class="card mb-3">
                        <%= image_tag @product_images[0].primg.url(:on_preview), class:"card-img img-fluid", id: "product-detail" %>
                    </div>
                    <div class="row">
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="prev">
                                <i class="text-dark fas fa-chevron-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </div>
                        <!--End Controls-->
                        <!--Start Carousel Wrapper-->
                        <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                            <!--Start Slides-->
                            <div class="carousel-inner product-links-wap" role="listbox">                                <!--First slide-->
                                <% offst = 0 %>
                                <% (@product_images.length.to_f/3).ceil.to_int.times.each do |t| %>
                                <% a_of_primg = @product_images.slice(offst,3) %>
                                <% unless a_of_primg.nil? %>
                                    <% if t==0 %>
                                    <div class="carousel-item active">
                                    <% else %>
                                    <div class="carousel-item">
                                    <% end %>
                                        <div class="row">
                                            <% a_of_primg.each do |pimg|%>
                                            <div class="col-4">
                                                <%= link_to pimg.primg.url do %>
                                                <%= image_tag pimg.primg.url(:eyecatch), class:"card-img img-fluid" %>
                                                <% end %>
                                            </div>
                                            <% end %>
                                        </div>
                                    </div>
                                <% end %>
                                <% offst += 3 %>
                                <% end %>
                            </div>
                        </div>
                        <!--End Carousel Wrapper-->
                        <!--Start Controls-->
                        <div class="col-1 align-self-center">
                            <a href="#multi-item-example" role="button" data-bs-slide="next">
                                <i class="text-dark fas fa-chevron-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!--End Controls-->
                    </div>
                </div>
                <!-- col end -->
                <div class="col-lg-7 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h1 class="h2"><%= @product.name %></h1>
                            <p class="h3 py-2">price</p>
                            
                            <%# <p class="py-2">
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-warning"></i>
                                <i class="fa fa-star text-secondary"></i>
                                <span class="list-inline-item text-dark">Rating 4.8 | 36 Comments</span>
                            </p> %>

                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <h6>By:</h6>
                                </li>
                                <li class="list-inline-item">
                                    <p class="text-muted"><strong><%= Shop.find_by(id: @product.shop_id).name %></strong></p>
                                </li>
                            </ul>

                            <h6>Description:</h6>
                            <p><%= @product.description %></p>
                            <h6>Categories:</h6>
                            <div class="pb-3">
                                <% @product.category_ids.each do |c| %>
                                <a href="" class="badge bg-success" style="text-decoration:none; color:#fff;"><%=Category.find(c).title%> </a>
                                <% end %>
                            </div>
                            <h6>Specification:</h6>
                            <ul class="list-unstyled pb-3">
                                <li><%= nil %></li>
                            </ul>
                            <% sold_out_arr = @product_stocks.select { |ps| ps.stock == 0 } %>
                            <% if sold_out_arr.size == @product_stocks.size %>
                                <div class="row pb-3">
                                    <div class="col d-grid">
                                        <button type="button" class="btn btn-danger btn-lg">Out of stock</button>
                                    </div>
                                </div>
                            <% else %>
                                <%= form_with model: CartItem.new, remote: true do |f| %>
                                    <div class="row">
                                        <div class="col-auto">
                                            <ul class="list-inline pb-3">
                                                <li class="list-inline-item">
                                                <%= f.label :product_stock,"Choose size and color", class: "form-label" %>
                                                </li>
                                                <% product_stocks_arr = @product_stocks.map { |ps| ["#{ps.color}: Size #{ApparelSize.find(ps.apparel_size_id).title}", ps.id] } %>
                                                <%# binding.pry %>
                                                <% if sold_out_arr.any? %>
                                                    <%= f.select(:product_stock, product_stocks_arr, {disabled: sold_out_arr.map{ |e| e.id }}, {class: "form-select"}) %>
                                                <% else %>
                                                    <%= f.select(:product_stock, product_stocks_arr, {}, {class: "form-select"}) %>
                                                <% end %>
                                            </ul>
                                        </div>
                                        <div class="col-auto">
                                            <ul class="list-inline pb-3">
                                                <li class="list-inline-item text-right">
                                                    Quantity
                                                    <%# <input type="hidden" name="product-quantity" id="product-quanity" value="1"> %>
                                                </li>
                                                <li class="list-inline-item"><span class="btn btn-success" id="btn-minus">-</span></li>
                                                <li class="list-inline-item"><span class="badge bg-secondary" id="var-value">1</span></li>
                                                <li class="list-inline-item"><span class="btn btn-success" id="btn-plus">+</span></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row pb-3">
                                        <div class="col d-grid">
                                            <%# <button type="submit" class="btn btn-success btn-lg" name="submit" value="buy">Buy</button> %>
                                        </div>
                                        <div class="col d-grid">
                                            <%= hidden_field_tag "product_quantity", "1" %>
                                            <%= hidden_field_tag "shop_id", @product.shop_id %>
                                            <%= f.submit "Add to cart", class:"btn btn-success btn-lg", data: { disable_with: "Added to cart" } %>
                                        </div>
                                    </div>
                                <% end %>
                            <% end %>
                            <div id="cart">
                                <%= render "cart_sessions/cart" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Close Content -->


 